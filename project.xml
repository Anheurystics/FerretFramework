<?xml version="1.0" encoding="utf-8"?>
<project>
	<meta title="FerretFramework" package="com.anheu.ferret" version="0.0.1" company="Anheurystics" />
	<app main="Main" path="bin" file="FerretFramework" />

	<template path="index.html" if="html5" />
	
	<window width="960" height="540" unless="mobile" />
	<window orientation="portrait" fps="60" antialiasing="2" />
	
	<haxedef name="webgl" if="html5" />
	<set name="webgl" if="html5" />

	<source path="src" />
	<haxelib name="openfl" />

	<assets path="assets/textures" rename="textures" embed="true" />
	<assets path="assets/shaders" rename="shaders" embed="true" />
	<assets path="assets/models" rename="models" embed="true" />
	<assets path="assets/fonts" rename="fonts" embed="true" />
</project>
